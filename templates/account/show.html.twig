{% extends 'layouts/base.html.twig' %}

{% block title 'Profile' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <h1 class="my-5">Profile</h1>
            <img class="img-thumbnail h-25" src="{{('build/images/profile.png') }}"/>
            <p class="lead">{{ app.user.email }}</p>
            <p><small>&wreath; Account created on {{ app.user.createdAt|date('d/m/Y') }}</small></p>
            <h2>{{ app.user.fullName }}</h2>

            <p><a href="{{ path('app_account_edit') }}">Edit Account</a> | <a href="{{ path('app_account_change_password') }}">Change Password</a></p>
        </div>
    </div>
{% endblock %}